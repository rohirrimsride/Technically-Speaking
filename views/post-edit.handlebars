<section class="blog-posts">
    <div class="post">
        <div class="post-header">
            <div class="post-title">
                <h3 class="title"><a href="{{post.post_url}}" class="post-link" target="_blank">{{post.post_title}}</a></h3>
            </div>
            <div class="post-author-date">
                <p class="author-date">Posted by {{user}} on {{format_date post.postedAt}}</p>
            </div>
        </div>
        <div class="post-body">
            <p class="body">{{post.post_data}}</p>
        </div>
    </div>
</section>

<section class="create-a-post">
    <h2>Update Post</h2>
    <form class="new-post-form">
        <div class="inputs">
            <label for="update-post-title">Title</label>
            <input type="text" name="update-post-title" id="update-post-title">
        </div>
        <div class="inputs">
            <label for="update-post-body">About</label>
            <textarea id="update-post-body" name="update-post-body" cols="30" rows="10"></textarea>
        </div>
        <div class="inputs">
            <label for="update-post-url">Link</label>
            <input type="text" name="update-post-url" id="update-post-url">
        </div>
        <div>
            <button type="submit" class="update-post-btn">UPDATE</button>
        </div>
    </form>
</section>

<script src="/js/edit-post.js"></script>