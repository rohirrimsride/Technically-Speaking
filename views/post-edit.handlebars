<section class="create-a-post">
    <h2>Update Post</h2>
    <form class="update-post">
        <div class="inputs">
            <label for="update-post-title">Title</label>
            <input type="text" name="update-post-title" id="update-post-title" value="{{post.post_title}}" />
        </div>
        <div class="inputs">
            <label for="update-post-body">Body</label>
            <textarea id="update-post-body" name="update-post-body" cols="30" rows="10">{{post.post_data}}</textarea>
        </div>
        <div>
            <button type="submit" class="update-post-btn">UPDATE</button>
        </div>
    </form>
</section>

<section class="blog-posts">
    <div class="post">
        <div class="post-header">
            <div class="post-title">
                <h3 class="title">{{post.post_title}}</h3>
            </div>
            <div class="post-author-date">
                <p class="author-date">Posted by {{post.user.username}} on {{format_date post.postedAt}}</p>
            </div>
        </div>
        <div class="post-body">
            <p class="body">{{post.post_data}}</p>
        </div>
    </div>
    <form class="delete-post">
    <button type="submit" class="delete-post-btn">DELETE</button>
    </form>
</section>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>