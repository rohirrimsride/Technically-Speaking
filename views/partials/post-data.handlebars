{{!-- Displays post title, create data and body via the homepage --}}
<div class="post-header">
    <div class="post-title">
        <h3 class="title"><a href="/post/{{post_id}}" class="post-link">{{post_title}}</a></h3>
    </div>
    <div class="post-author-date">
        <p class="author-date">Posted by {{user.username}} on {{format_date postedAt}}</p>
    </div>
</div>
<div class="post-body">
            <p class="body">{{post_data}}</p>
</div>

<script src="/js/view-post.js"></script>
