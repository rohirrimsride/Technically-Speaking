<section class="blog-posts">
    <div class="post">
        <div class="post-header">
            <div class="post-title">
                <h3 class="title">{{post_title}}</h3>
            </div>
            <div class="post-author-date">
                <p class="author-date">Posted by {{user}} on {{format_date postedAt}}</p>
            </div>
        </div>
        <div class="post-body">
            <p class="body">{{post_data}}</p>
        </div>
    </div>
</section>